<div id="<%= dom_id category %>" class="p-4 mb-4 text-center mx-auto">
  <p class="text-lg font-bold mb-2"><%= category.name %></p>
  <%= link_to 'Edit', edit_category_path(category), class: "text-yellow-500 hover:text-yellow-700 mr-2" %>
  <%= link_to 'Delete', category_path(category), data: { turbo_method: :delete,
turbo_confirm: 'Are you sure to delete this category?' }, class: "text-red-500 hover:text-red-700" %>
</div>
