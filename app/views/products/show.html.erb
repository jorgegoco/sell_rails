<%= render partial: 'products/product_details', locals: { product: @product } %>

<%= link_to 'Edit Product', edit_product_path(@product) if @product.owner? %>
<%= link_to 'Delete Product', product_path(@product), data: { turbo_method: :delete,
turbo_confirm: 'Are you sure to delete this product?' } if @product.owner? %>

<%= link_to "View all products from #{@product.user.username}", user_path(@product.user.username) %>

<%= render partial: 'favorite', locals: { product: @product } %>

<%= turbo_stream_from @product %>
  