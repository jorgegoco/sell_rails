<%= turbo_frame_tag 'categories' do %>

  <h1>Products</h1>

  <%= form_with url: products_path, method: :get do |form| %>
    <%= form.text_field :query_text, placeholder: 'Search by text', onChange: 'this.form.requestSubmit()', value: params[:query_text] %>
    <%= form.number_field :min_price, placeholder: 'Minimum Price', onChange: 'this.form.requestSubmit()', value: params[:min_price] %>
    <%= form.number_field :max_price, placeholder: 'Maximum Price', onChange: 'this.form.requestSubmit()', value: params[:max_price] %>
  <% end %>

  <%= link_to 'See All', products_path %>

  <%= render partial: 'category', collection: @categories %>

  <%= render partial: 'product', collection: @products %>
<% end %>
