    <h1 class="text-2xl font-bold text-teal-500">Sell It</h1>
  <% end %>
  
  <button class="sm:hidden"><%= image_tag 'icons/menu.svg', width: 35, height: 35 %></button>
  <div class="hidden sm:block">
    <%= render partial: 'shared/items' %>
  </div>
  
  <!-- Menu mobile -->
  <div class="sm:hidden absolute bg-white top-0 right-0 shadow z-10 h-full flex flex-col min-w-[35%] overflow-y-scroll ease-in-out duration-200 p-5 translate-x-full">
    <%= render partial: 'shared/items' %>
  </div>
</div>
