<div class="bg-white flex justify-between items-center px-2">
  <%= link_to products_path do %>
    <h1 class="text-2xl font-bold text-teal-500">Sell It</h1>
  <% end %>
  
  <button class="sm:hidden"><%= image_tag 'icons/menu.svg', width: 35, height: 35 %></button>
  <div class="hidden sm:block">
    <%= link_to 'Add Product', new_product_path, class: "mx-2 text-teal-500 font-bold" if Current.user %>
    <%= link_to 'My Favorites', favorites_path, class: "mx-2 text-teal-500 font-bold" if Current.user %>
    <%= link_to 'Categories', categories_path, class: "mx-2 text-teal-500 font-bold" if Current.user&.admin? %>
    <%= link_to 'Log in', new_session_path, class: "mx-2 text-teal-500 font-bold" unless Current.user %>
    <%= link_to 'Sign up', new_user_path, class: "mx-2 text-teal-500 font-bold" unless Current.user %>
    <%= link_to 'Log out', session_path(Current.user.id), data: {
      turbo_method: :delete,
      turbo_confirm: 'Are you sure to log out?'
    }, class: "mx-2 text-teal-500 font-bold" if Current.user %>
  </div>
</div>
